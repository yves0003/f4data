{
  "name": "f4data",
  "displayName": "f4data",
  "description": "View, understand and search in your data directly in VS Code",
  "publisher": "yves0003",
  "repository": {
    "type": "git",
    "url": "https://github.com/yves0003/f4data.git"
  },
  "version": "0.3.3",
  "engines": {
    "vscode": "^1.80.0"
  },
  "pricing": "Free",
  "keywords": [
    "sas",
    "data",
    "dictionary",
    "onboarding",
    "BCBS239",
    "SR11â€‘7",
    "credit risk",
    "quant finance"
  ],
  "icon": "resources/icon/logo_128x128.png",
  "categories": [
    "Visualization"
  ],
  "badges": [
    {
      "href": "https://yveszendja.com",
      "description": "badge version",
      "url": "https://img.shields.io/badge/f4data-0.3.3-blue"
    }
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:dic-explorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewStyles": [
      "./resources/style.css"
    ],
    "configuration": {
      "title": "f4data",
      "properties": {
        "f4data.list": {
          "type": "array",
          "default": [],
          "scope": "window",
          "description": "list of dictionary",
          "items": {
            "type": "object",
            "title": "dictionary",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the dictionary"
              },
              "link": {
                "type": "string",
                "description": "Link to the directory of the dictionary"
              },
              "file": {
                "type": "string",
                "description": "file name of the dictionary"
              },
              "work_dir": {
                "type": "string",
                "description": "Working directory where the dictionary can be used"
              }
            }
          }
        },
        "f4data.snippetPath": {
          "type": "string",
          "default": "",
          "description": "Full path to your custom SAS snippet JSON file"
        },
        "f4data.listEmpty": {
          "type": "boolean",
          "default": true
        }
      }
    },
    "commands": [
      {
        "command": "f4data.searchWebview",
        "title": "Search in dictionary",
        "icon": "$(eye)"
      },
      {
        "command": "f4data.mapWebview",
        "title": "Display Webview",
        "icon": "$(link)"
      },
      {
        "command": "f4data.addDictionaries",
        "title": "Add many dictionaries",
        "icon": "$(diff-added)"
      },
      {
        "command": "f4data.refreshAll",
        "title": "Refresh all",
        "icon": "$(refresh)"
      },
      {
        "command": "f4data.copyVarVal",
        "title": "Copy",
        "icon": "$(files)"
      },
      {
        "command": "f4data.deleteAdict",
        "title": "Delete"
      },
      {
        "command": "f4data.updateWorkDir",
        "title": "Update working directory"
      },
      {
        "command": "f4data.openWorkDir",
        "title": "Open working directory"
      },
      {
        "command": "f4data.displayMap",
        "title": "Display the mapping",
        "icon": "$(info)"
      },
      {
        "command": "f4data.clickOnVar",
        "title": "Click on a variable"
      },
      {
        "command": "f4data.copyTableToCSV",
        "title": "Copy all infos",
        "icon": "$(files)"
      },
      {
        "command": "f4data.copyVarsToCSV",
        "title": "Copy all infos",
        "icon": "$(files)"
      },
      {
        "command": "f4data.viewDocOnTable",
        "title": "Open the documentation",
        "icon": "$(book)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dic-explorer",
          "title": "Dictionary",
          "icon": "$(book)"
        }
      ],
      "panel": [
        {
          "id": "panel-Mapping",
          "title": "Dictionary: Mapping",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "panel-Mapping": [
        {
          "name": "Panel Dictionary",
          "id": "mappingApanel",
          "type": "webview",
          "icon": ""
        }
      ],
      "dic-explorer": [
        {
          "id": "dic-list",
          "name": "Dictionaries",
          "type": "tree",
          "icon": ""
        },
        {
          "id": "dic-tabs",
          "name": "Tables",
          "icon": ""
        },
        {
          "id": "dic-vars",
          "name": "Variables",
          "icon": ""
        },
        {
          "id": "dic-docs",
          "name": "Help and documents",
          "icon": ""
        }
      ]
    },
    "viewsWelcome": [
      {
        "id": "dic-welcome",
        "contents": "ðŸ‘‹ Bienvenue sur f4data.\nSÃ©lectionner le rÃ©pertoire du dictionnaire que vous souhaitez afficher.\n[Ajouter un dictionnaire](command:f4data.addDictionaries)",
        "when": "config.f4data.listEmpty",
        "view": "dic-list"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "f4data.refreshAll",
          "when": "view == dic-list",
          "group": "navigation@1"
        },
        {
          "command": "f4data.refreshAll",
          "when": "view == f4data.openview",
          "group": "navigation@1"
        },
        {
          "command": "f4data.addDictionaries",
          "when": "view == dic-list",
          "group": "navigation@1"
        },
        {
          "command": "f4data.copyTableToCSV",
          "when": "view == dic-tabs",
          "group": "navigation@1"
        },
        {
          "command": "f4data.copyVarsToCSV",
          "when": "view == dic-vars",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "when": "view == dic-list",
          "command": "f4data.searchWebview",
          "group": "inline@1"
        },
        {
          "when": "view == dic-list",
          "command": "f4data.mapWebview",
          "group": "inline@2"
        },
        {
          "when": "view == dic-vars",
          "command": "f4data.copyVarVal",
          "group": "inline@2"
        },
        {
          "when": "view == dic-list",
          "command": "f4data.deleteAdict",
          "group": "2_delete"
        },
        {
          "when": "view == dic-list",
          "command": "f4data.updateWorkDir",
          "group": "1_delete"
        },
        {
          "when": "view == dic-list",
          "command": "f4data.openWorkDir",
          "group": "1_delete"
        },
        {
          "when": "view == dic-vars && viewItem == parent_with_map",
          "command": "f4data.displayMap",
          "group": "inline@1"
        },
        {
          "when": "view == dic-tabs && viewItem == parent_with_docs",
          "command": "f4data.viewDocOnTable",
          "group": "inline@1"
        }
      ]
    },
    "languages": [
      {
        "id": "rd",
        "aliases": [
          "RD Language",
          "rd"
        ],
        "extensions": [
          ".rd"
        ],
        "configuration": "./lang/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "rd",
        "scopeName": "source.rd",
        "path": "./lang/rd.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build:webview && npm run build:websearch && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "start:webview": "cd web && npm run start",
    "build:webview": "cd web && npm run build",
    "build:websearch": "cd web_search && npm run build",
    "build:vsix": "vsce package -o ./packages"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.16",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "csv-parse": "^5.6.0",
    "lodash": "^4.17.21",
    "markdown-it-collapsible": "^2.0.2",
    "markdown-it-highlightjs": "^4.2.0",
    "worker-threads": "^1.0.0"
  }
}
